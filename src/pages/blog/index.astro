---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';

const title = 'Solar Energy Blog - Tips & Guides | SunSeeker';
const description = 'Expert guides on solar panel positioning, maintenance tips, and renewable energy insights. Learn how to maximize your solar energy production.';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="blog-page">
      <section class="blog-header">
        <h1>Solar Energy Blog</h1>
        <p>Expert guides, tips, and insights to help you get the most from your solar panels.</p>
      </section>

      <section class="blog-grid">
        {posts.map((post, index) => (
          <article class={`blog-card ${index === 0 ? 'featured' : ''}`}>
            <a href={`/sunseeker/blog/${post.id}/`}>
              <div class="card-content">
                <span class="card-date">
                  <FormattedDate date={post.data.pubDate} />
                </span>
                <h2 class="card-title">{post.data.title}</h2>
                <p class="card-description">{post.data.description}</p>
                <span class="read-more">Read article â†’</span>
              </div>
            </a>
          </article>
        ))}
      </section>

      <section class="blog-cta">
        <h2>Want More Solar Tips?</h2>
        <p>Download SunSeeker to get personalized recommendations for your solar setup.</p>
        <div class="cta-buttons">
          <a href="/sunseeker/" class="btn btn-primary">Get the App</a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .blog-page {
    max-width: 1000px;
  }

  .blog-header {
    text-align: center;
    padding: 3rem 0;
  }

  .blog-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--text-dark), var(--grass-green));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-header p {
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    padding: 2rem 0;
  }

  .blog-card {
    background: var(--pure-white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .blog-card.featured {
    grid-column: 1 / -1;
  }

  .blog-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-content {
    padding: 2rem;
  }

  .featured .card-content {
    padding: 3rem;
    text-align: center;
  }

  .card-date {
    display: block;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .card-title {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    color: var(--text-dark);
  }

  .featured .card-title {
    font-size: 2rem;
  }

  .card-description {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .featured .card-description {
    max-width: 700px;
    margin: 0 auto 1.5rem;
  }

  .read-more {
    color: var(--grass-green);
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .blog-card:hover .read-more {
    color: var(--sunshine-yellow);
  }

  .blog-cta {
    text-align: center;
    background: linear-gradient(135deg, var(--light-gold) 0%, var(--soft-sage) 100%);
    border-radius: 24px;
    padding: 3rem 2rem;
    margin: 3rem 0;
  }

  .blog-cta h2 {
    margin-bottom: 0.75rem;
  }

  .blog-cta p {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .blog-header {
      padding: 2rem 0;
    }

    .blog-header h1 {
      font-size: 2rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }

    .featured .card-content {
      padding: 2rem;
    }

    .featured .card-title {
      font-size: 1.5rem;
    }
  }
</style>
