---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { GITHUB_URL } from '../consts';

const title = 'Download SunSeeker';
const description = 'SunSeeker mobile app availability and release updates.';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="download-page">
      <section class="hero">
        <h1>Download SunSeeker</h1>
        <p>
          SunSeeker mobile apps are in release preparation. Use the links below to track availability.
        </p>
      </section>

      <section class="cards">
        <article class="card" id="ios">
          <h2>iOS</h2>
          <p>The App Store listing will be published here once review is complete.</p>
          <a class="btn btn-primary" href={GITHUB_URL} target="_blank" rel="noopener noreferrer">
            Get Release Updates
          </a>
        </article>
        <article class="card" id="android">
          <h2>Android</h2>
          <p>The Google Play listing will be published here once rollout is complete.</p>
          <a class="btn btn-primary" href={GITHUB_URL} target="_blank" rel="noopener noreferrer">
            Get Release Updates
          </a>
        </article>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .download-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  .hero p {
    color: var(--text-muted);
    max-width: 680px;
    margin: 0 auto;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.5rem;
    padding: 1rem 0 2rem;
  }

  .cards .card h2 {
    margin-bottom: 0.75rem;
  }

  .cards .card p {
    color: var(--text-muted);
    margin-bottom: 1.25rem;
  }

  @media (max-width: 768px) {
    .cards {
      grid-template-columns: 1fr;
    }
  }
</style>
